<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="annotatorSubprocessor" class="org.dataone.cn.indexer.annotation.AnnotatorSubprocessor">
		
		<property name="fieldList">
			<list>
				<ref bean="annotation.expansion" />
			</list>
		</property>	
	</bean>
	
	<bean id="annotation.expansion" class="org.dataone.cn.indexer.annotation.SparqlField">
		<constructor-arg name="name" value="annotation_sm" />
		<constructor-arg name="query">
			<value>
				<![CDATA[
				PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> 
				PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#> 
				PREFIX owl: <http://www.w3.org/2002/07/owl#> 
				
				SELECT ?annotation_sm
				FROM <$GRAPH_NAME>				
				WHERE { 
						<$CONCEPT_URI> rdfs:subClassOf+ ?annotation_sm .
				 	} 
				 ]]>
			</value>
		</constructor-arg>
		<!--property name="multivalue" value="false" /-->
	</bean>
	
	<bean id="annotation1304Sys" class="org.springframework.core.io.ClassPathResource" >
        <constructor-arg type="java.lang.String" 
        value="org/dataone/cn/index/resources/d1_testdocs/annotation/annotation.130.4.xml"/>
    </bean>
    
    <bean id="annotation1304" class="org.springframework.core.io.ClassPathResource" >
        <constructor-arg type="java.lang.String" 
        value="org/dataone/cn/index/resources/d1_testdocs/annotation/annotation.130.4.json"/>
    </bean>
	
</beans>